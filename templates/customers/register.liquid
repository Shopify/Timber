{% comment %}

  This template will be automatically generated for you if the file doesn't exist,
  but where's the fun in having no control? Define your layout below.

  The 'layout settings.customer_layout' line is inserted at the top of every customer account template.
  Your theme's settings determine to use the 'default' or 'theme' customer templates.
  More info:
    - http://www.tetchi.ca/shopify-theme-from-scratch-part-11/

{% endcomment %}

{% layout settings.customer_layout %}

<div class="grid">

  <div class="grid-item large--one-third push--large--one-third">

    <h1>{{ 'customer.register.title' | t }}</h1>

    {% comment %}
      This form must use 'create_customer'
    {% endcomment %}
    {% form 'create_customer' %}

      {% include 'form-errors-custom' %}

      <label for="first_name" class="hidden-label">{{ 'general.forms.first_name' | t }}</label>
      <input type="text" value="" name="customer[first_name]" id="first_name" placeholder="{{ 'general.forms.first_name' | t }}" {% if form.errors contains "first_name" %} class="error"{% endif %} autocapitalize="words" autofocus>

      <label for="last_name" class="hidden-label">{{ 'general.forms.last_name' | t }}</label>
      <input type="text" value="" name="customer[last_name]" id="last_name" placeholder="{{ 'general.forms.last_name' | t }}" {% if form.errors contains "last_name" %} class="error"{% endif %} autocapitalize="words">

      <label for="email" class="hidden-label">{{ 'general.forms.email' | t }}</label>
      <input type="email" value="" name="customer[email]" id="email" placeholder="{{ 'general.forms.email' | t }}" {% if form.errors contains "email" %} class="error"{% endif %} autocorrect="off" autocapitalize="off">

      <label for="password" class="hidden-label">{{ 'general.forms.password' | t }}</label>
      <input type="password" value="" name="customer[password]" id="create_password" placeholder="{{ 'general.forms.password' | t }}" {% if form.errors contains "password" %} class="error"{% endif %}>

      <div class="text-center">
        <p>
          <input type="submit" value="{{ 'customer.register.submit' | t }}" class="btn">
        </p>
        or <a href="{{ shop.url }}">{{ 'customer.register.cancel' | t }}</a>
      </div>

    {% endform %}

  </div>

</div>
